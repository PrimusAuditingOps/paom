<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_blockout_page_inherit_form" model="ir.ui.view">
        <field name="name">res.partner.blockout.page.inherit.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Blockout Dates" name="blockout_dates">
                    <field name="blockout_dates_ids" widget="one2many_list">
                        <tree string="Blockout Dates">
                            <field name="reason"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>