<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pao_documents_version_management_view_tree" model="ir.ui.view">
        <field name="name">pao.documents.version.management.view.tree</field>
        <field name="model">pao.documents.version.management</field>
        <field name="arch" type="xml">
            <tree string="Documents Version Management">
                <field name="expiration_date" invisible="1"/>
                <field name="is_document_expired" invisible="1"/>
                <field name="is_document_near_expiration" invisible="1"/>
                <field decoration-danger="is_document_expired" decoration-warning="is_document_near_expiration" name="code"/>
                <field decoration-danger="is_document_expired" decoration-warning="is_document_near_expiration" name="name"/>
                <field decoration-danger="is_document_expired" decoration-warning="is_document_near_expiration" name="department_id"/>
                <field decoration-danger="is_document_expired" decoration-warning="is_document_near_expiration" name="scheme_id"/>
                <field decoration-danger="is_document_expired" decoration-warning="is_document_near_expiration" name="revision_number"/>
                <field decoration-danger="is_document_expired" decoration-warning="is_document_near_expiration" name="approval_date"/>
                <field decoration-danger="is_document_expired" decoration-warning="is_document_near_expiration" name="last_updated_by"/>
                <!-- <field decoration-danger="expiration_date and expiration_date &lt; time.strftime('%Y-%m-%d')" name="last_updated_by"/> -->
            </tree>
        </field>
    </record>

    <record id="pao_documents_version_management_view_search" model="ir.ui.view">
        <field name="name">pao.documents.version.management.view.search</field>
        <field name="model">pao.documents.version.management</field>
        <field name="arch" type="xml">
            <search>
                <filter name="filter_ggap" string="GLOBALG.A.P." domain="[('scheme_id.internal_name', '=', 'global_gap')]"/>
                <filter name="filter_general" string="General" domain="[('scheme_id.internal_name', '=', 'general')]"/>
                <filter name="filter_organics" string="Organics" domain="[('scheme_id.internal_name', '=', 'organics')]"/>
                <filter name="filter_haccp" string="HACCP" domain="[('scheme_id.internal_name', '=', 'ghaccp')]"/>

                <separator/>

                <filter name="filter_spanish" string="Spanish" domain="[('language_id.code', '=', 'es_MX')]"/>
                <filter name="filter_english" string="English" domain="[('language_id.code', '=', 'en_US')]"/>

                <separator/>

                <filter name="filter_active_request" string="Active requests" domain="[('approval_request_in_progress', '=', True)]"/>

                <filter name="group_department_id" string="Department" context="{'group_by':'department_id'}"/>
                <filter name="group_scheme_id" string="Scheme" context="{'group_by':'scheme_id'}"/>
                <filter name="group_language_id" string="Language" context="{'group_by':'language_id'}"/>
            </search>
        </field>
    </record>

    <record id="pao_documents_version_management_view_form" model="ir.ui.view">
        <field name="name">pao.documents.version.management.view.form</field>
        <field name="model">pao.documents.version.management</field>
        <field name="arch" type="xml">
            <form string="Documents Version Management">
                <sheet>
                    <field name="approval_request_in_progress" invisible="1"/>
                    <field name="is_document_expired" invisible="1"/>
                    <div class="o_not_full oe_button_box">
                        <button string="The document is still valid" attrs="{'invisible': [('is_document_expired', '=', False)]}" type="object" class="oe_highlight" name="postpone_expiration_date" groups="pao_sgc.sgc_admin_group"/>
                        <button string="Upload new version" attrs="{'invisible': [('id', '=', False)]}" type="object" class="oe_highlight m-3" name="upload_new_version_action" groups="pao_sgc.sgc_admin_group"/>
                        <button name="action_view_active_approval_request" groups="pao_sgc.sgc_admin_group" type="object" class="oe_stat_button" icon="fa-file-text-o" attrs="{'invisible': [('approval_request_in_progress', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">Request</span>
                            </div>
                        </button>
                    </div>
                    <group col="4">
                        <field name="code"/>
                        <field name="name"/>
                        <field name="department_id" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="scheme_id" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="language_id" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="version" attrs="{'readonly': [('id', '!=', False)]}"/>
                        <field name="revision_number" attrs="{'readonly': [('id', '!=', False)]}"/>
                        <field name="approval_date" attrs="{'readonly': [('id', '!=', False)]}"/>
                        <field name="document_file" filename="filename" attrs="{'readonly': [('id', '!=', False)]}"/>
                        <field name="approval_id" attrs="{'invisible': [('approval_id', '=', False)]}"/>
                        <field name="id" invisible="1"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <notebook groups="pao_sgc.sgc_admin_group" attrs="{'invisible': [('id', '=', False)]}">
                        <page string="Version History">
                            <field name="history_version_ids" widget="one2many_list">
                                <tree string="Documents">
                                    <field name="name"/>
                                    <field name="document_file" widget="download_link" filename="filename"/>
                                    <field name="version"/>
                                    <field name="revision_number"/>
                                    <field name="version_by"/>
                                    <field name="approval_id"/>
                                    <field name="validity_start_date"/>
                                    <field name="validity_end_date"/>
                                    <field name="filename" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="pao_documents_version_action" model="ir.actions.act_window">
        <field name="name">Documents Version Management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pao.documents.version.management</field>
        <field name="context">{'search_default_group_department_id': 1}</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>