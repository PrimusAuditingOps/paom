<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pao_globalgap_send_fans_request_view_form" model="ir.ui.view">
        <field name="name">pao.globalgap.send.fans.request.view.form</field>
        <field name="model">pao.globalgap.send.fans.request</field>
        <field name="arch" type="xml">
            <form>
                <group col="2"> 
                    <field name="send_to_sign" invisible="1"/>
                    <field name="sale_order_id" invisible="1" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                    <field name="capturist_id" placeholder="Write email or search contact..." options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                    <field name="follower_ids" invisible="send_to_sign" placeholder="Write email or search contact..." widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                    <field name="subject" placeholder="Enter Subject"/>
                    <field name="message" placeholder="Optional Message..."/>
                </group>
                <footer>
                   <button string="Send" name="send_fans_request" type="object" class="btn-primary"/>
                   <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pao_globalgap_send_fans_request" model="ir.actions.act_window">
        <field name="name">Send fans request</field>
        <field name="res_model">pao.globalgap.send.fans.request</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

</odoo>