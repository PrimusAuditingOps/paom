    <record id="pao_fans_request_view_form" model="ir.ui.view">
        <field name="name">pao.fans.request.view.form</field>
        <field name="model">pao.globalgap.fans.request</field>
        <field name="arch" type="xml">
            <form string="GLOBALG.A.P. Fans request">
                <header>
                    <field name="qa_status" invisible="1"/>
                    <field name="request_status" widget="statusbar" statusbar_visible="sent,review,signature_request,signed"/>
                    <button name="action_approve" class="oe_highlight" type="object" string="Approve" invisible="request_status == 'annulled' or qa_status == 'approved'"/>
                    <button name="resend_fans_request" type="object" string="Correction request" invisible="request_status in ['annulled','draft','signed']"/>
                    <button name="resend_fans_request" type="object" string="Send request" invisible="request_status != 'draft'"/>
                    <button name="action_send_to_sign" type="object" string="Send to Sign" invisible="request_status != 'review'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="request_status == 'annulled' or qa_status == 'approved'"/>
                    <!---->
                </header>
                <sheet>

                    <group col="2">
                        <field name="qa_status"/>
                        <field name="request_url"/>
                    </group>
                    <group col="4">
                        <field name="title"/>
                        <field name="capturist_id"/>
                        <field name="organization_id"/>
                        <field name="sale_order_id"/>
                        <!--attrs="{'invisible': [('request_status', 'in', ['sent', 'draft'])]}"-->
                    </group>
                    <group col="2">
                        <field name="attachment_datas" invisible="1"/>
                        <field name="attachment_name" invisible="1"/>
                        <field name="attachment_id" invisible="1"/>
                        <field name="attachment_datas" filename="attachment_name" invisible="request_status != 'signed'"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="pao_fans_request_view_tree" model="ir.ui.view">
        <field name="name">pao.fans.request.view.tree</field>
        <field name="model">pao.globalgap.fans.request</field>
        <field name="arch" type="xml">
            <tree string="GLOBALG.A.P. Fans request">
                <field name="title"/>
                <field name="qa_status"/>
                <field name="request_status"/>
                <field name="capturist_id"/>
                <field name="organization_id"/>
            </tree>
        </field>
    </record>
   
     <record id="pao_fans_organization_view_form" model="ir.ui.view">
        <field name="name">pao.fans.organization.view.form</field>
        <field name="model">pao.globalgap.organization</field>
        <field name="arch" type="xml">
            <form string="Organization">
                <sheet>
                    <group col="2">
                        <field name="name"/>
                        <field name="unannounced"/>
                    </group>
                    <group col="4">
                        <field name="plmx"/>
                        <field name="globalgap_version"/>
                        <field name="ggn"/>
                        <field name="gln"/>
                        <field name="certification_option"/>
                        <field name="evaluation_type"/>
                        <field name="previous_cb"/>
                        <field name="vat"/>
                        <field name="addons_ids" widget="many2many_tags"/>
                    </group>
                    <group col="2">
                        <field name="rights_of_access"/>
                    </group>
                    <notebook colspan="4">
                        <page name="address" string="Address">
                            <group col="4">
                                <field name="address"/>
                                <field name="zip"/>
                                <field name="postal_address"/>
                                <field name="city_id"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                                <field name="telephone"/>
                                <field name="email"/>
                                <field name="latitude"/>
                                <field name="longitude"/>
                            </group>
                        </page>
                        <page name="contact_info" string="Contact information">
                            <group col="4">
                                <field name="contact_name"/>
                                <field name="contact_position"/>
                                <field name="contact_telephone"/>
                                <field name="contact_email"/>
                            </group>
                        </page>
                        <page name="production_site" string="Production site">
                            <field name="production_site_ids" widget="many2many" context="{'default_organization_id': id}">
                                <tree string="production site">
                                    <field name="name"/>
                                    <field name="type"/>
                                </tree>
                            </field>
                        </page>
                        <page name="product_information" string="Product information">
                            <field name="product_information_ids" widget="many2many" context="{'default_organization_id': id}">
                                <tree string="product information">
                                    <field name="product_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                        
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
