<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_pao_fans_request_view_form" model="ir.ui.view">
        <field name="name">sale.order.pao.fans.request.view.form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_fans_request" type="object" class="oe_stat_button" icon="fa-file-text-o" invisible="pao_fans_request_count == 0">
                     <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="pao_fans_request_count"/></span>
                        <span class="o_stat_text">Fans</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <record id="pao_fans_request_wizard" model="ir.actions.server">
            <field name="name">Send fans request</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">action = record.send_sale_order_fans_request()</field>
    </record>


</odoo>