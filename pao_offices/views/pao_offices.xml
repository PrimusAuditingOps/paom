<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pao_offices_view_form" model="ir.ui.view">
        <field name="name">pao.offices.view.form</field>
        <field name="model">pao.offices</field>
        <field name="arch" type="xml">
            <form string="office Form">
                <sheet>
                    <group col="2">
                        <field name="name"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>   
                    </group>
                    <notebook>
                        <page string="Customers">
                            <field name="customer_ids" widget="many2many">
                                <tree string="Registered Customers">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pao_offices_view_tree" model="ir.ui.view">
        <field name="name">pao.offices.view.tree</field>
        <field name="model">pao.offices</field>
        <field name="arch" type="xml">
            <tree string="offices Tree">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide" readonly="1"/>
            </tree>
        </field>
    </record>


    <record id="pao_offices_action" model="ir.actions.act_window">
        <field name="name">Offices</field>
        <field name="res_model">pao.offices</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create first office
            </p>
        </field>
    </record>

    <menuitem id="pao_offices_sale"
            name="Offices"
            parent="sale.sale_order_menu"
            action="pao_offices_action"
            sequence="12"/>

</odoo>