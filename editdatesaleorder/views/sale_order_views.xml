<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_edit_date_view_form" model="ir.ui.view">
        <field name="name">sale.order.edit.date.view.form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="edso_is_date_editable" invisible="1"/>
            </field>
            <xpath expr="//group[@name='sale_header']/group[@name='order_details']/div[hasclass('o_td_label')][1]" position="attributes">
              	<attribute name="groups"></attribute>
            </xpath>
            <xpath expr="//group[@name='sale_header']/group[@name='order_details']/field[@name='date_order'][1]" position="attributes">
              	<attribute name="readonly">not edso_is_date_editable or state in ['cancel']</attribute>
              	<attribute name="groups"></attribute>
            </xpath>
            <xpath expr="//group[@name='sale_header']/group[@name='order_details']/field[@name='date_order'][2]" position="attributes">
              	<attribute name="readonly">not edso_is_date_editable or state in ['cancel']</attribute>
            </xpath>
        </field>
    </record>
</odoo>