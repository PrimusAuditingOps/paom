<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="account_move_billing_person_form_view" model="ir.ui.view">
        <field name="name">account.move.billing.person.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="create_uid" string="Billing Person" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_billing_person_search_view" model="ir.ui.view">
        <field name="name">account.move.billing.person.search.view</field>
        <field name="model">account.move</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']" position="after">
                <field name="create_uid" string="Billing Person"/>
            </xpath>
        </field>
    </record>
</odoo>