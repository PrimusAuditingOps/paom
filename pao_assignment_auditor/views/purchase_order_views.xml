<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record id="purchase_order_assignment_auditor_view_form" model="ir.ui.view">
        <field name="name">purchase.order.assignment.auditor.view.form</field>
        <field name="model">purchase.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <group name="invoice_info" position="after">
                <group name="purchase_location">
                    <field name="paa_is_auditor" invisible="1"/>
                    <field name="audit_country_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                    <field name="audit_state_id"  options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('country_id', '=', audit_country_id)]"/>
                    <field name="audit_city_id"  options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('state_id', '=', audit_state_id)]"/>
                </group>
            </group>
            <!--<group name="purchase_location" position="after">
                    <group name="Assignment">
                         <field name="assigned_auditor_id" readonly="1"/> 
                         <field name="assigned_auditor_position" readonly="1"/> 
                         <field name="assigned_auditor_qualification" readonly="1"/>    
                    </group>
            </group>-->
            <field name="partner_id" position="before">
				<widget name="popup_assignment_auditor" style="min-width: 170px;"/>
				<br/>
            </field>
            <field name="date_order" position="before">           
                <field name="language_ids" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
            </field>
            <page name="purchase_delivery_invoice" position="after">
                <page string="Top 10 Auditor Assignation" invisible="not pao_auditor_top_ids">
                    <field name="pao_auditor_top_ids" readonly="1" widget="many2many">
                        <tree string="Top 10">
                            <field name="auditor_id"/>
                            <field name="qualification"/>
                        </tree>
                    </field>
                </page>
            </page>

        </field>
    </record>
</odoo>