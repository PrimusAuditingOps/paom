<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record id="purchase_order_assignment_auditor_view_form" model="ir.ui.view">
        <field name="name">purchase.order.assignment.auditor.view.form</field>
        <field name="model">purchase.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <group name="invoice_info" position="after">
                <group name="purchase_location">
                    <fleid name="paa_is_auditor" invisible="1"/>
                    <field name="audit_country_id" options="{'no_quick_create': True, 'no_create_edit' : True}" attrs="{'required': [('ac_is_an_auditor','=',True)]}"/>
                    <field name="audit_state_id"  options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('country_id', '=', audit_country_id)]" attrs="{'required': [('ac_is_an_auditor','=',True)]}"/>
                    <field name="audit_city_id"  options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('state_id', '=', audit_state_id)]" attrs="{'required': [('ac_is_an_auditor','=',True)]}"/>
                </group>
            </group>
            <group name="purchase_location" position="after">
                    <group name="Assignment">
                         <field name="assigned_auditor_id" class="oe_read_only"/> 
                         <field name="assigned_auditor_position" class="oe_read_only"/> 
                         <field name="assigned_auditor_qualification" class="oe_read_only"/>    
                    </group>
            </group>
            <field name="partner_id" position="before">
                <widget name='popup_assignment_auditor' button_name="search_auditors" 
                title="Search Auditors"/>
                
            </field>
        </field>
    </record>
</odoo>