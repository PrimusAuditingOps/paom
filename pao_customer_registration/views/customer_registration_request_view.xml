<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="pao_customer_registration_sent_view_form" model="ir.ui.view">
        <field name="name">pao.customer.registration.view.form</field>
        <field name="model">pao.customer.registration</field>
        <field name="arch" type="xml">
            <form string="Registration Form" create="false">
                 <header>
                   <field name="request_status" widget="statusbar" statusbar_visible="sent,complet,cancel,done"/>
                    <button name="action_resend" type="object" string="Resend" invisible="request_status == 'cancel'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="request_status in ['complet', 'cancel','done']"/>
                    <button name="action_update_contact"  class="btn-primary" type="object" string="Update Contact" invisible="request_status != 'complet'"/>
                </header>
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="vat"/>
                        <field name="country_id"/>
                        <field name="state_id"/>
                        <field name="city_id"/>
                        <field name="street_name"/>
                        <field name="zip"/>
                        <field name="phone"/>
                        <field name="fiscal_regime"/>
                        <field name="asesor"/>
                        <field name="attachment_datas" invisible="1"/>
                        <field name="attachment_name" invisible="1"/>
                        <field name="attachment_datas" filename="attachment_name"/>

                        <field name="attachment_proof_of_address_datas" invisible="1"/>
                        <field name="attachment_proof_of_address_name" invisible="1"/>
                        <field name="attachment_proof_of_address_datas" filename="attachment_proof_of_address_name"/>   

                        <field name="attachment_bank_account_datas" invisible="1"/>
                        <field name="attachment_bank_account_name" invisible="1"/>
                        <field name="attachment_bank_account_datas" filename="attachment_bank_account_name"/>   

                        <field name="attachment_sat_compliance_opinion_datas" invisible="1"/>
                        <field name="attachment_sat_compliance_opinion_name" invisible="1"/>
                        <field name="attachment_sat_compliance_opinion_datas" filename="attachment_sat_compliance_opinion_name"/>   


                        <field name="form_url" widget="url"/>
                    </group>
                    <group col="2">
                      <field name="email"/>
                    </group>
                    <notebook>
                        <page string="Contacts">
                            <field name="child_ids" widget="many2many">
                                <tree string="Registered contact">
                                    <field name="name"/>
                                    <field name="occupation"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pao_customer_registration_view_tree" model="ir.ui.view">
        <field name="name">pao.customer.registration.view.tree</field>
        <field name="model">pao.customer.registration</field>
        <field name="arch" type="xml">
            <tree string="Registration Tree" create="false">
                <field name="name"/>
                <field name="request_status" decoration-success="request_status == 'complet'" decoration-warning="request_status == 'exception'" decoration-info="request_status == 'sent'" widget="badge"/>
            </tree>
        </field>
    </record>
    <record id="customer_registration_action" model="ir.actions.act_window">
        <field name="name">Customer Registration</field>
        <field name="res_model">pao.customer.registration</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create Customer Registration
            </p>
        </field>
    </record>

</odoo>