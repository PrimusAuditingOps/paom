<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_customer_registration_view_form" model="ir.ui.view">
        <field name="name">res.partner.customer.registration.view.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_customer_registration" type="object" class="oe_stat_button" icon="fa-file-text" attrs="{'invisible': [('pao_customer_registration_count', '=', 0)]}">
                     <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="pao_customer_registration_count"/></span>
                        <span class="o_stat_text">CR Request</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>