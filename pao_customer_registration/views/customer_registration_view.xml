<?xml version="1.0" encoding="utf-8"?>
<odoo>  
    <!-- Assets
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Customer Registration">
        <xpath expr="." position="inside">
            <link href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css" rel="stylesheet"/>
            <script type="text/javascript" src="https://unpkg.com/gridjs/dist/gridjs.umd.js"/>
            <script type="text/javascript" src="/pao_customer_registration/static/src/js/pao_customer_registration.js"/>
        </xpath>
    </template>-->
    <template id="pao_customer_registration_exception_page_view" name="Request not found">
        <t t-call="web.frontend_layout">
            <div class="container pt-5">
                <div class="text-center mt-5 pt-5">
                    <h3 class="d-inline">The customer registration request was canceled or does not exist.</h3>
                </div>
            </div>
        </t>
    </template>

    <template id="pao_customer_registration_completed_page_view" name="Request completed">
        <t t-call="web.frontend_layout">
            <div class="container pt-5">
                <div class="text-center mt-5 pt-5">
                    <h3 class="d-inline">The customer registration request was completed.</h3>
                </div>
            </div>
        </t>
    </template>
    <template id="pao_customer_registration_finish_page_view" name="Request completed">
        <t t-call="web.frontend_layout">
            <div class="container pt-5">
                <div class="text-center mt-5 pt-5">
                    <h3 class="d-inline">Thank you for your response, this request was completed.</h3>
                </div>
            </div>
        </t>
    </template>
    <template id="pao_customer_registration.pao_customer_registration" name="Customer Registration">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty o_website_customer_registration">
                <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-scroll-background-ratio="1">
                    <span class="s_parallax_bg oe_img_bg"/>
                    <div class="o_we_bg_filter bg-black-50"/>
                    <div class="container">
                        <h1>Customer Registration</h1>
                    </div>
                </section>
                <section class="s_text_block pt40 pb40 o_colored_level " data-snippet="s_text_block">
                    <div class="container s_allow_columns">
                        <div class="row">
                            <div class="col-lg-12 col-lg-8 mt-4 mt-lg-0">
                                <p>
                                    Please update your information.
                                </p>
                                <section class="s_website_form">
                                    <div class="container">
                                        <!--data-model_name="mail.mail"-->
                                        <form id="contactus_form" class="o_mark_required o_website_customer_registration_form" action="/pao/customer/registration/send/data" method="post"  enctype="multipart/form-data" 
                                        data-success-mode="redirect" data-success-page="/job-thank-you" hide-change-model="true" data-mark="*" >
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="cr_token" id="cr_token" t-att-value="token"/>
                                                <input type="hidden" name="cr_id" id="cr_id" t-att-value="id"/>
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_custom s_website_form_required" data-type="char">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label" for="name">
                                                            <span class="s_website_form_label_content">Name</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <input id="name" t-att-value="data.name" type="text" class="form-control s_website_form_input" name="company" required="*"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_custom" data-type="char">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label" for="rfc">
                                                            <span class="s_website_form_label_content">VAT</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <input id="rfc" type="text" t-att-value="data.vat"  class="form-control s_website_form_input" name="rfc" required="*" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_custom" data-type="char">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label" for="phonenumber">
                                                            <span class="s_website_form_label_content">Phone</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <input id="phonenumber" t-att-value="data.phone" type="tel" class="form-control s_website_form_input" required="*"  name="phonenumber" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_required" data-type="email">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label" for="email">
                                                            <span class="s_website_form_label_content">Email</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <input id="email" t-att-value="data.email" type="text" class="form-control s_website_form_input" name="email" required="*" />
                                                            <p style="color:gray;">To add more than one email, please place it with a comma and without a space.</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_required" data-type="char">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label"  for="street">
                                                            <span class="s_website_form_label_content">Address</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <input id="street" t-att-value="data.street_name" type="text" class="form-control s_website_form_input" name="street" required="*"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_dnone">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label"  for="zip">
                                                            <span class="s_website_form_label_content">ZIP</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <input id="zip" t-att-value="data.zip" class="form-control s_website_form_input" required="*" name="zip"/>
                                                            
                                                        </div>
                                                    </div>
                                                </div>           
                                            </div>
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_dnone">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label"  for="country">
                                                            <span class="s_website_form_label_content">Country</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <select class="form-control"  optional="false" id="country" name="country">
                                                                <t t-foreach="countries" t-as="c">
                                                                    <!--<option t-att-value="c.id"><t t-esc="c.name"/></option>-->

                                                                    <option t-if="c.id == data.country_id.id" selected="" required="*" t-att-value="c.id">
                                                                       <t t-esc="c.name"/>
                                                                    </option>
                                                                    <option t-else="" t-att-value="c.id">
                                                                       <t t-esc="c.name"/>
                                                                    </option>
                                                                </t>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_dnone">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label"  for="state">
                                                            <span class="s_website_form_label_content">State</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <select class="form-control" optional="false" id="state" required="*" name="state">
                                                                <t t-foreach="states" t-as="s">
                                                                   
                                                                     <option t-if="s.id == data.state_id.id" selected="" t-att-value="s.id" t-att-data-option="s.country_id.id">
                                                                       <t t-esc="s.name"/>
                                                                    </option>
                                                                    <option t-else="" t-att-value="s.id" t-att-data-option="s.country_id.id">
                                                                       <t t-esc="s.name"/>
                                                                    </option>
                                                                </t>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>                                                
                                            </div>
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_dnone">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label"  for="city">
                                                            <span class="s_website_form_label_content">City</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <select class="form-control" optional="false" id="city" name="city" required="*">
                                                                <t t-foreach="cities" t-as="c">

                                                                    <option t-if="c.id == data.city_id.id" selected="" t-att-value="c.id"  t-att-data-option="c.state_id.id">
                                                                        <t t-esc="c.name"/>
                                                                    </option>

                                                                    <option t-else="" t-att-value="c.id" t-att-data-option="c.state_id.id">
                                                                        <t t-esc="c.name" />
                                                                    </option>
                                                                </t>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_dnone">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label"  for="cfdiuse">
                                                            <span class="s_website_form_label_content">CFDI use</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <select class="form-control"  optional="false" id="cfdiuse" name="cfdiuse">
                                                                    <t t-foreach="fiscal_regime" t-as="e">
                                                                        <option t-if="e[0] == data.fiscal_regime" selected="" t-att-value="e[0]">
                                                                        <t t-esc="e[1]"/>
                                                                    </option>
                                                                    <option t-else="" t-att-value="e[0]">                         
                                                                        <t t-esc="e[1]"/>
                                                                    </option>
                                                                </t>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>                                                
                                            </div>
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_custom" data-type="char">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label" for="asesor">
                                                            <span class="s_website_form_label_content">Asesor</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <input id="asesor" type="text" class="form-control s_website_form_input" name="asesor" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_dnone">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-auto s_website_form_label" for="attachments">
                                                            <span class="s_website_form_label_content">Fiscal certificate</span>
                                                        </label>
                                                        <div class="col-sm col-xs-12">
                                                            <input id="attachments" type="file" required="*" name="attachments" class="form-control s_website_form_input" multiple="true" accept="application/pdf"/>
                                                            <p style="color:red;">Please attach the fiscal certificate dated less than 30 days old.</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_dnone">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-auto s_website_form_label" for="attachments_proof_of_address">
                                                            <span class="s_website_form_label_content">Proof of address</span>
                                                        </label>
                                                        <div class="col-sm col-xs-12">
                                                            <input id="attachments_proof_of_address" type="file" required="*" name="attachments_proof_of_address" class="form-control s_website_form_input" multiple="true" accept="application/pdf"/>
                                                            <p style="color:red;">Please attach the proof of address.</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_dnone">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-auto s_website_form_label" for="attachments_bank_account">
                                                            <span class="s_website_form_label_content">Bank account statement cover</span>
                                                        </label>
                                                        <div class="col-sm col-xs-12">
                                                            <input id="attachments_bank_account" type="file" required="*" name="attachments_bank_account" class="form-control s_website_form_input" multiple="true" accept="application/pdf"/>
                                                            <p style="color:red;">Please attach the Bank account statement cover</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mb-0 py-2 col-6 s_website_form_field s_website_form_dnone">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-auto s_website_form_label" for="attachments_sat">
                                                            <span class="s_website_form_label_content">SAT compliance opinion</span>
                                                        </label>
                                                        <div class="col-sm col-xs-12">
                                                            <input id="attachments_sat" type="file" required="*" name="attachments_sat" class="form-control s_website_form_input" multiple="true" accept="application/pdf"/>
                                                            <p style="color:red;">Please attach the SAT compliance opinion.</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <legend  class="w-auto" style="font-weight:bold;text-align:center" >Contacts:</legend>
                                            <div class="s_website_form_rows row s_col_no_bgcolor" style="text-align:center">
                                                <div class="form-group col-md-3">
                                                    <label for="nombrecontacto">Name</label>
                                                    <input type="text" name="nombrecontacto" id="nombrecontacto" class="form-control s_website_form_input" width="100px" placeholder="Enter name"/>
                                                </div>
                                                <div class="form-group col-md-3">
                                                    <label for="nombrepuesto">Occupation</label>
                                                    <input type="text" name="nombrepuesto" id="nombrepuesto" class="form-control s_website_form_input" width="100px" placeholder="Enter occupation"/>
                                                </div>
                                                <div class="form-group col-md-3">
                                                    <label for="correocontacto">Email</label>
                                                    <input type="text" name="correocontacto" id="correocontacto" class="form-control s_website_form_input" width="100px" placeholder="Enter email"/>
                                                </div>
                                                <div class="form-group col-md-3">
                                                    <label for="movilcontacto">Phone</label>
                                                    <input type="tel" name="movilcontacto" id="movilcontacto" class="form-control s_website_form_input" width="100px" placeholder="Enter phone"/>
                                                </div>
                                            </div>
                                            <div class="s_website_form_rows row s_col_no_bgcolor" style="text-align:center">
                                                <div class="form-group col-md-12">
                                                    <button type="button" class="btn btn-success btn-md btn_add_contact" id="btn_add_contact">Add Contact</button>
                                                </div>
                                            </div>
                                            <input type="hidden" name="contacts" id="contacts" class="form-control s_website_form_input" width="100px" placeholder=""/>
                                            <div id="wrapper"></div>
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div class="mb-0 py-2 col-12 s_website_form_submit" style="text-align: center;" data-name="Submit Button">
                                                    <div style="width: 200px;" class="s_website_form_label"/>
                                                    <button type="button" id="btn_send" class="btn btn-primary">Submit <span class="fa fa-arrow-right"/></button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>