<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- PRM CONTACT SHIPPER VIEWS -->

        <record model="ir.ui.view" id="prm_contact_shipper_form">
            <field name="name">prm_contact_shipper_form</field>
            <field name="model">prm.contact.shipper</field>
            <field name="arch" type="xml">
                <form name="Shippers">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="prm_contact_shipper_tree">
            <field name="name">prm_contact_shipper_tree</field>
            <field name="model">prm.contact.shipper</field>
            <field name="arch" type="xml">
                <tree name="Shippers">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="prm_contact_shipper_action" model="ir.actions.act_window">
            <field name="name">Shippers</field>
            <field name="res_model">prm.contact.shipper</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="prm_contact_shipper_menu" name="Shippers" action="prm_contact_shipper_action" parent="contacts.res_partner_menu_config" sequence="3"/>

    </data>
</odoo>
