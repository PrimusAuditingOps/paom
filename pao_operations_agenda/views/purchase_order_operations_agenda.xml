<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
    <record id="pao_operations_agenda_view_calendar" model="ir.ui.view">
        <field name="name">pao.operations.agenda.view.calendar</field>
        <field name="model">pao.operations.agenda</field>
        <field name="arch" type="xml">
            <calendar string="Auditor Calendar" date_start="service_start_date" date_stop="service_end_date" 
             color="color" quick_add="False" hide_time="True" hide_date="True" mode="month" all_day="all_day"> 
                <field name="audit_status"/>
                <field name="order_id"/>
                <field name="state_id"/>
                <field name="city_id"/>
                <field name="coordinator_id"/>
                <field name="customer_group_id"/>
                <field name="promotor_id"/>
                <field name="products"/>
            </calendar>
        </field>
    </record>
    
    <record id="pao_operations_agenda_search" model="ir.ui.view">
        <field name="name">Search Agenda</field>
        <field name="model">pao.operations.agenda</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="partner_ref"/>
                <field name="coordinator_id"/>
                <field name="customer_id"/>
                <field name="shadow_id"/>
                <field name="assessment_id"/>
                
                <filter string="Active Audits" name="state" domain="[('state','!=','cancel')]" />
            </search>
        </field>
    </record>


    <record id="pao_operations_agenda_action" model="ir.actions.act_window">
        <field name="name">Auditor Agenda</field>
        <field name="res_model">pao.operations.agenda</field>
        <field name="view_mode">calendar</field>
        <field name="context">{"search_default_state":1}</field>
    </record>
    

    <menuitem id="pao_operations_agenda_menu"
            name="Auditor Agenda"
            parent="purchase.menu_procurement_management"
            action="pao_operations_agenda_action"
            sequence="21"/>

</odoo>