<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="expense_scheme_tree_view" model="ir.ui.view">
        <field name="name">expense.scheme.tree.view</field>
        <field name="model">expense.scheme</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Departments">
                <field name="name"/>
                <field name="property_account_expense_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="expense_scheme_form_view" model="ir.ui.view">
        <field name="name">expense.scheme.form.view</field>
        <field name="model">expense.scheme</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="property_account_expense_id"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="expense_schemes_menu_action" model="ir.actions.act_window">
        <field name="name">Schemes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">expense.scheme</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="expense_schemes_menu_item" name="Schemes" parent="hr_expense.menu_hr_expense_configuration" sequence="1" action="expense_schemes_menu_action"/>

</odoo>