<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_expense_tree_view_inherit" model="ir.ui.view">
        <field name="name">hr.expense.tree.view.inherit</field>
        <field name="model">hr.expense</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="hr_expense.view_my_expenses_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="partner_id"/>
            </xpath>
        </field>
    </record>

    <record id="hr_expense_form_view_inherit" model="ir.ui.view">
        <field name="name">hr.expense.form.view.inherit</field>
        <field name="model">hr.expense</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="country_code" invisible="1"/>
                <field name="partner_id" invisible="country_code != 'MX' and not partner_id" readonly="state != 'draft'"/>
            </xpath>
            <xpath expr="//field[@name='date']" position="attributes">
                <attribute name="required">True</attribute>
                <attribute name="readonly">not is_editable</attribute>
            </xpath>
        </field>
    </record>

</odoo>