<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_form_sale_order_invoice_date_inherit" model="ir.ui.view">
            <field name="name">view.form.sale.order.invoice.date.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="pao_invoice_date"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

