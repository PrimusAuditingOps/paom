<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record id="purchase_order_confirmation_view_form" model="ir.ui.view">
        <field name="name">purchase.order.confirmation.view.form</field>
        <field name="model">purchase.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="date_order" position="before">
				<button title="Mostrar seguidores" name="show_audit_state_history" type="object"
	                class="o_FollowerListMenu_buttonFollowers btn btn-link" invisible="not ac_is_an_auditor">
	                <nobr><i class="fa fa-history"></i><span> View audit status </span></nobr><span>history</span></button>
	            <div class="oe_clear" invisible="not ac_is_an_auditor"/>
                <field name="ac_is_an_auditor" invisible="1"/>
                <field name="ac_audit_status" invisible="not ac_is_an_auditor"/>
                <!-- <field name="ac_request_travel_expenses" invisible="not ac_is_an_auditor"/> -->
            </field>
            <xpath expr="//button[@name='button_done']" position="after">  
              <button name="create_audit_state" class="oe_highlight" type="object" string="Change audit status" invisible="not ac_is_an_auditor"/>        
            </xpath>
            <xpath expr="/form/header" position="after">
                <div class="alert alert-warning mb-0" invisible="not ac_is_an_auditor or ac_audit_confirmation_status != '0'" role="alert">
                    <p style="text-align:center; color:black">
                    <label for="ac_audit_confirmation_status"/>
                    <field name="ac_audit_confirmation_status" readonly="1"/>
                    </p>
                </div>
                <div class="alert alert-info mb-0" invisible="not ac_is_an_auditor or ac_audit_confirmation_status != '1'" role="alert">
                    <p style="text-align:center; color:black">
                    <label for="ac_audit_confirmation_status"/>
                    <field name="ac_audit_confirmation_status" readonly="1"/>
                    </p>
                </div>
                <div class="alert alert-danger mb-0" invisible="not ac_is_an_auditor or ac_audit_confirmation_status != '2'" role="alert">
                    <p style="text-align:center; color:black">
                    <label for="ac_audit_confirmation_status"/>
                    <field name="ac_audit_confirmation_status" readonly="1"/>
                    </p>
                </div>
                <div class="alert alert-success mb-0" invisible="not ac_is_an_auditor or ac_audit_confirmation_status != '3'" role="alert">
                    <p style="text-align:center; color:black">
                    <label for="ac_audit_confirmation_status"/>
                    <field name="ac_audit_confirmation_status" readonly="1"/>
                    </p>
                </div>
            </xpath>
        </field>
    </record>
</odoo>