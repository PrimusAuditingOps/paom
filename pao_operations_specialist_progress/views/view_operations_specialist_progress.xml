<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_pao_specialist_audits_progress_view_tree" model="ir.ui.view">
        <field name="name">res.partner.inherit.pao.specialist.audits.progress.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='user_id']" position="before">

                <field name="specialist_audits_coordinated" groups="pao_auditor_audits_progress.group_auditor_progress_viewer" optional="hide"/>
                <field name="specalist_audits_goal" groups="pao_auditor_audits_progress.group_auditor_progress_viewer" optional="hide"/>
                <field name="specialist_goal_progress" groups="pao_auditor_audits_progress.group_auditor_progress_viewer" optional="hide" widget="progressbar"/>

            </xpath>

        </field>
    </record>

    <record id="res_partner_pao_specialist_audits_progress_view_form" model="ir.ui.view">
        <field name="name">res.partner.inherit.pao.specialist.audits.progress.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='season_goal']" position="attributes">
                <attribute name="invisible">not ado_is_auditor and not ado_is_specialist</attribute>
            </xpath>

            <xpath expr="//field[@name='ado_is_auditor']" position="after">
                <field name="ado_is_specialist"/>
            </xpath>

            <xpath expr="//page[@name='season_goal']/group[1]/group[@name='auditors_goal']" position="attributes">
                <attribute name="invisible">not ado_is_auditor</attribute>
            </xpath>

            <xpath expr="//page[@name='season_goal']/group[1]" position="inside">

                <group name="specialist_goal" string="Specialist's Season Goal" invisible="not ado_is_specialist" groups="pao_auditor_audits_progress.group_auditor_progress_viewer">
                    <field name="specialist_audits_quantity" class="oe_inline"/>
                    
                    <field name="specialist_audits_coordinated" class="oe_inline"/>

                    <field name="specialist_goal_progress" widget="progressbar" class="oe_inline"/>

                    <field name="specalist_audits_goal" class="oe_inline"/>
                </group>

            </xpath>

        </field>
    </record>
</odoo>