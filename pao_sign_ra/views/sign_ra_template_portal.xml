<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="process_complete_ra_request_portal_view" name="RA Signature Request">
        <t t-call="web.frontend_layout">
            <div class="container pt-5">
                <div class="text-center my-5 py-5">
                    <t t-if="ra_status == 'error'">
                        <h3 class="d-inline">There was an error processing your response. Please try again.</h3>
                    </t>
                    <t t-if="ra_status == 'cancel'">
                        <h3 class="d-inline">The RA signature request was canceled or does not exist.</h3>
                    </t>
                    <t t-if="ra_status == 'reject'">
                        <h3 class="d-inline">Thank you for your response. If you anything else please contact our staff.</h3>
                    </t>
                    <t t-if="ra_status == 'sign'">
                        <h3 class="d-inline">Thank you for your response.</h3>
                        <!-- ADD DOWNLOAD RA BUTTON -->
                    </t>

                </div>
            </div>
        </t>
    </template>

    <template id="travel_expenses_portal_view" name="Travel Expenses Form">
        <t t-call="web.frontend_layout">
            <div class="col-md-12" style="top:20px;">
                <div class="oe_structure container mb128">
                    <form id="travel_expenses_form" method="POST" t-att-action="submit_travel_expenses_link" class="col-md-6" style="margin: auto;">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <label for="travelexpenses">Please add your detailed travel expenses:</label>
                                <textarea class="form-control" id="travel_expenses" name="travel_expenses" rows="4"></textarea>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <template id="sign_ra_preview_portal_view" name="Ra Signature Form">
        <xpath expr="//head" position="inside">
            <style>
                ul {
                    font-family: sans-serif !important;
                }
            </style>
        </xpath>
        <t t-call="web.frontend_layout">
            <div class="container pt-5">
                <div class="text-center mb-4">
                    <h3 class="d-inline">
                        <b>Sign RA</b>
                    </h3>
                </div>

                <br/>

                <div class="d-flex justify-content-center mt-4 mb-5">
                    <button data-bs-toggle="modal" data-bs-target="#accept_sign_ra" class="btn btn-primary mx-3">Accept</button>
                </div>

                <div class="modal fade" id="accept_sign_ra" tabindex="-1" aria-labelledby="accept_sign_ra_label" aria-hidden="true">
                    <div class="modal-dialog">
                        <form method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Sign RA</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <t t-call="portal.signature_form">
                                        <t t-set="call_url" t-value="accept_link"/>
                                        <t t-set="default_name" t-value="request.env.user.partner_id.name"/>
                                        <t t-set="font_color" t-value="'darkblue'"/>
                                    </t>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>