<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="purchase_order_send_ra_view_form" model="ir.ui.view">
    <field name="name">purchase.order.send.ra.view.form</field>
    <field name="model">purchase.order</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">

      <xpath expr="//button[@name='button_confirm']" position="after">
        <button name="send_referral_agreement_action" invisible="state != 'sent'" string="Send RA" type="object"/>
      </xpath>

    </field>
  </record>
</odoo>
