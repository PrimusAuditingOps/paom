<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="send_proposal_view_form" model="ir.ui.view">
        <field name="name">send.proposal.view.form</field>
        <field name="model">send.pricelist.proposal</field>
        <field name="arch" type="xml">
            <form>
                <group col="2">
                    <field name="customer_id" placeholder="Write email or search contact..." options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                    <field name="cc_customer_ids" widget="many2many_tags" placeholder="CC Addresses." options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                    <field name="subject" placeholder="Enter Subject"/>
                    <field name="message" placeholder="Optional Message..."/>
                </group>
                <group col="4">
                    <field name="message_proposal_template_id"/>
                    <field name="proposal_terms"/>
                    <field name="mail_template_id" invisible="1" options="{'no_create':True, 'create_edit': false,'no_open': True}"/>
                </group>
                <footer>
                    <button string="Send" name="send_mail" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>