<?xml version="1.0"?>
<odoo>
    <data>
        <record id="hr_employee_expenses_manager_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.expenses.manager.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="upload_account_statement" class="oe_stat_button" type="object">
                        Upload Account Statement
                    </button>
                </xpath>
                <xpath expr="//field[@name='work_email']" position="after">
                    <field name="expenses_manager"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>