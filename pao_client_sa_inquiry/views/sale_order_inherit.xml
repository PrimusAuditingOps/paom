<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_sa_button_view_form" model="ir.ui.view">
        <field name="name">res.partner.sa.button.view.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_partner_service_agreements" type="object" class="oe_stat_button" icon="fa-file-text-o" invisible="pao_agrements_count == 0">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="pao_agrements_count"/></span>
                        <span class="o_stat_text">SA</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>