<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_sa_pivot" model="ir.ui.view">
         <field name="name">sa.report.pivot</field>
         <field name="model">sa.report</field>
         <field name="arch" type="xml">
             <pivot string="SA Report" disable_linking="True" sample="1">
                 <field name="coordinator_id" type="row"/>
                 <field name="organization" type="row"/>
                 <field name="service_registry_number" type="row"/>
                 <field name="service_start_date" type="row"/>
                 <field name="quantity" type="measure"/>
             </pivot>
         </field>
    </record>

