<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- ACCOUNT MOVE INHERIT VIEWS -->

        <record id="account_move_view_inh_form" model="ir.ui.view">
            <field name="name">account.move.view.inh.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field
                        name="prm_partner_id"
                        context="{'display_prm_customer_number': True}"
                        domain="[('prm_customer_number', '!=', False), ('parent_id', '=', False)]"
                        invisible="move_type not in ('out_invoice') or company_id != 59"
                        options="{'no_create':True, 'create_edit': false, 'no_open': True}"
                    />

                </xpath>

            </field>
        </record>

    </data>
</odoo>