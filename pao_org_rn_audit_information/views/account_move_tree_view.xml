<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_audit_information_tree_view" model="ir.ui.view">
        <field name="name">account.move.audit.information.tree.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='country_code']" position="after">
                <field name="audit_start_date" string="Audit Dates" widget="daterange" options="{'end_date_field': 'audit_end_date'}"/>
                <field name="organization"/>
                <field name="registry_number"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_audit_information_view_search" model="ir.ui.view">
        <field name="name">account.move.audit.information.view.search</field>
        <field name="model">account.move</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']" position="after">
                <field name="audit_start_date"/>
                <field name="audit_end_date"/>
                <field name="organization"/>
                <field name="registry_number"/>
            </xpath>
        </field>
    </record>
</odoo>